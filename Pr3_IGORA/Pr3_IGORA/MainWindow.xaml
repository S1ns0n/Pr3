<Window x:Class="Pr3_IGORA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pr3_IGORA"
        mc:Ignorable="d"
        Title="Игора" Height="550" Width="800"
        MinHeight="500" MinWidth="500"
        WindowStartupLocation="CenterScreen">
    <Grid>

        <Image Source="/mountains.jpg"
               Stretch="Fill"/>





        <Border CornerRadius="20"
                Background="#95343a40" 
                Width="300"
                Height="350"
                Name="Border">
            <Grid
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Height="300"
                Margin="0,20,0,0">

                <StackPanel 
     VerticalAlignment="Top"
     Margin="0,0,0,0">

     <TextBlock
         Text="Лого тут"
         FontSize="24"
         Height="40"/>
 </StackPanel>
                
                
                
                
                

                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0,0,0,0">

                    <TextBlock
                        Text="Логин:"
                        Margin="0,0,0,2"/>
                    <TextBox Margin="0,0,0,5"/>


                    <TextBlock
                        Text="Пароль:"
                        Margin="0,0,0,2"/>
                    <PasswordBox Margin="0,0,0,20"/>

                    <Button Style="{StaticResource GreenButton}"
                            Content="Войти"
                            Name="test"
                            Click="test_Click"/>



                 
                </StackPanel>

               



            </Grid>
        </Border>










    </Grid>
</Window>
