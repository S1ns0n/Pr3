<Page x:Class="Pr3_IGORA.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pr3_IGORA.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage"
      FontFamily="Comic Sans MS">

    <Grid>



        


        <Border CornerRadius="20"
             Background="#95000000" 
             Width="300"
             Height="350"
             Name="Border">
            <Grid        
             VerticalAlignment="Center"
             HorizontalAlignment="Center"
             Height="300"
             Margin="0,20,0,0">





                <StackPanel 
                   VerticalAlignment="Top"
                   Margin="0,0,0,0">

                    <TextBlock
                        Text="Лого тут"
                        FontSize="24"
                        Height="40"
                        Foreground="White"
                        TextAlignment="Center"/>
                </StackPanel>

                <StackPanel HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Margin="0,0,0,0">

                    <TextBlock
                     Text="Логин:"
                     Margin="0,0,0,2"
                     HorizontalAlignment="Left"
                     TextAlignment="Left"
                     Foreground="White"/>
                    <TextBox Margin="0,0,0,5"
                             Name="TxbLogin"/>


                    <TextBlock
                     Text="Пароль:"
                     Margin="0,0,0,2"
                     HorizontalAlignment="Left"
                     TextAlignment="Left"
                     Foreground="White"/>
                    <PasswordBox Margin="0,0,0,20"
                                 Name="TxbPassword"/>

                    <Button Style="{StaticResource GreenButton}"
                         Name="BtnLogin"
                         Click="BtnLogin_Click">
                        <TextBlock
                            Text="Войти"
                            TextAlignment="Center"/>
                    </Button>

                </StackPanel>





            </Grid>
        </Border>










    </Grid>
</Page>
