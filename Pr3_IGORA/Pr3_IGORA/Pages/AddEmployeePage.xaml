<Page x:Class="Pr3_IGORA.Pages.AddEmployeePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pr3_IGORA.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEmployeePage">


    <Grid>

        <Button
            Width="100"
            Height="30"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            Margin="5"
            Content="Назад"
            Name="Btn_Back"
            Click="Btn_Back_Click"/>

        <StackPanel Margin="20"
        VerticalAlignment="Center"
        HorizontalAlignment="Center"
        Width="400">

        <Grid Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="IDEmployee"
               VerticalAlignment="Center"/>
            <TextBox 
                x:Name="id_employee_txb"
                 FontSize="16"
                 Grid.Column="1"/>
        </Grid>

        <Grid Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="Фамилия"
               VerticalAlignment="Center"/>
            <TextBox 
                x:Name="LastNameTextBox"
                 FontSize="16"
                 Grid.Column="1"/>
        </Grid>

        <Grid Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Имя"
               VerticalAlignment="Center"/>
            <TextBox 
                x:Name="FirstNameTextBox"
                 FontSize="16"
                 Grid.Column="1"/>
        </Grid>

        <Grid Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Отчество"
               VerticalAlignment="Center"/>
            <TextBox 
                x:Name="MiddleNameTextBox"
                 FontSize="16"
                 Grid.Column="1"/>
        </Grid>

        <Grid Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock 
                Text="Должность"
               VerticalAlignment="Center"/>

            <ComboBox 
                x:Name="PositionComboBox"
                 FontSize="16"
                 Grid.Column="1"/>
        </Grid>
        <Grid Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Логин"
               VerticalAlignment="Center"/>
            <TextBox x:Name="LoginTextBox"
             FontSize="16"
             Grid.Column="1"/>
        </Grid>

        <Grid Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Пароль"
               VerticalAlignment="Center"/>
            <TextBox x:Name="PasswordTextBox"
             FontSize="16"
             Grid.Column="1"/>
        </Grid>

        <Button 
            Content="Создать"
            x:Name="AddEmplBtn"
            Click="AddEmplBtn_Click"
            Margin="0,15,0,0"
            HorizontalAlignment="Stretch"
            />
    </StackPanel>

    </Grid>
</Page>
