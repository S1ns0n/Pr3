<Page x:Class="Pr3_IGORA.Pages.PageInfoOrders"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pr3_IGORA.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageInfoOrders">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1.5*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>


            <StackPanel 
                Orientation="Vertical" 
                HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal">
                    <TextBlock 
                        Width="100"
                        Text="ФИО"/>
                    <TextBox x:Name="txbFIO"
                             Width="300"
                             IsEnabled="False"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock 
                        Width="100"
                        Text="Длительность"/>
                    <TextBox x:Name="txbDlitel"
                             IsEnabled="False"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock 
                        Width="100"
                        Text="Штрих код"/>
                    <TextBox 
                        x:Name="txbShrihcode"
                        IsEnabled="False"/>
                </StackPanel>
            </StackPanel>


                <Button
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="5"
                    Click="Button_Click"
                    Content="Назад"
                    Style="{StaticResource GreenButton}"/>




            <DataGrid Grid.Row="1" 
                              AutoGenerateColumns="False"
                              Name="Dg_Srvice"
                              IsReadOnly="True"
                              VerticalScrollBarVisibility="Auto"
                              VerticalContentAlignment="Center">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" 
                                        Binding="{Binding IDService}"
                                        Width="0.3*"/>

                    <DataGridTextColumn 
                        Header="Услуга"
                        Binding="{Binding Service.Name_Service}"
                         Width="*"/>

                    <DataGridTextColumn 
                        Header="Цена за час"
                        Binding="{Binding Service.Cost_On_Hour}"
                        Width="*"/>

                </DataGrid.Columns>
            </DataGrid>


        </Grid>
    </Grid>
</Page>
