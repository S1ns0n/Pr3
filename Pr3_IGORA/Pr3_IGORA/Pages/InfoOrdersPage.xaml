<Page x:Class="Pr3_IGORA.Pages.PageInfoOrders"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pr3_IGORA.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageInfoOrders" FontFamily="Comic Sans MS" FontSize="14">

    <Grid>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"
              Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                        Orientation="Vertical">
                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="300"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="ФИО"
                               VerticalAlignment="Center"/>
                        <TextBox x:Name="txbFIO"
                             Grid.Column="1"
                             IsEnabled="False"/>
                    </Grid>

                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Длительность"
                               VerticalAlignment="Center"/>
                        <TextBox x:Name="txbDlitel"
                             Grid.Column="1"
                             IsEnabled="False"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Штрих код"
                               VerticalAlignment="Center"/>
                        <TextBox x:Name="txbShrihcode"
                             Grid.Column="1"
                             IsEnabled="False"/>
                    </Grid>
                </StackPanel>

                <Button Grid.Column="2"
                    Content="Назад"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Click="Button_Click"
                        Width="100"
                    Margin="5"/>
            </Grid>

            <DataGrid Grid.Row="1"
                  x:Name="Dg_Srvice"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  VerticalScrollBarVisibility="Auto">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" 
                                    Binding="{Binding IDService}"
                                    Width="0.3*"/>

                    <DataGridTextColumn Header="Услуга"
                                    Binding="{Binding Service.Name_Service}"
                                    Width="*"/>

                    <DataGridTextColumn Header="Цена за час"
                                    Binding="{Binding Service.Cost_On_Hour}"
                                    Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Page>
